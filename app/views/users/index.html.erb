<% if @users.empty? %>
  <center><h3>No user except you</h3></center>
<% else %>
  <div class = "user_show div_absolute_position">
    <h3> Users List </h3>
    <table>
      <tr>
        <th>Sr. No</th>
        <th>User Name</th>
        <th>View profile</th>
      </tr>
      <% @users.each_with_index do |user, n| %>
        <tr>
          <td><%= n+1 %></td>
          <td><%= user.name%></td>
          <td><%= link_to "Show", user_path(user), class: 'btn btn-primary btn-sm' %>
            <% unless user == current_user %>
              <%= link_to "Add Friend", friendships_path(:friend_id => user) , method: :post, class: 'btn btn-primary btn-sm' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= link_to 'Back', :back %> 
  </div>
<% end %>
