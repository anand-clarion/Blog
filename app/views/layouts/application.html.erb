<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class = "header">
    <div class = "header_flash_message">
      <h3>BLOG.COM</h3>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class = "header_link" >
        <span id = "signed_in_as">Signed in as <%= current_user.name %></span>
        <%= link_to 'Edit profile', edit_user_registration_path, :class => "header_link_to" %>
        <%= link_to "Sign out", destroy_user_session_path,:method => :delete, :class => "header_link_to" %>
      </div>
      <div class = "header_link_for_controller" >
        <%= link_to "User", users_path, :class => "header_link_to" %>
        <%= link_to "Create Post", new_post_path,  :class => "header_link_to" %>
        <%= link_to "Post Index", posts_path, :class => "header_link_to" %>
        <% if current_user.admin? %>
          <%= link_to "Post category", categories_path, :class => "header_link_to" %>
        <% end %>
      </div>
      <div class = "search_form">
        <% all_data = table_data() %>
        <%= form_tag (search_users_path) do %>  
        <%= hidden_field_tag :auto_holder, "#{ all_data.join(",") }" %>
          <%= text_field_tag :search, params[:search], placeholder: "Search" %> 
          <%= submit_tag "Search", :name => nil %>     
        <% end %>
      </div>
    <% else %>
      <div class = "header_link" >
        <%= link_to "Login", new_user_session_path, :class => "header_link_to" %>
      </div>
    <% end %>
  </div>
  <%= yield :javascript_includes %> 
  <div class = "yield_container">  
    <%= yield %>
  </div>
</body>
</html>
